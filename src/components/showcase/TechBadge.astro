---
import { Badge } from '../ui/badge';
import type { TechId } from '@/lib/project-data';

export interface Tech {
  title: string;
  classes: string;
}

interface Props {
  techId: TechId;
}

const tech: Record<TechId, Tech> = {
  next: {
    title: 'NextJS',
    classes: 'bg-black text-white'
  },
  astro: {
    title: 'Astro',
    classes: 'bg-violet-600 text-white'
  },
  tailwind: {
    title: 'Tailwind CSS',
    classes: 'bg-sky-500 text-white'
  },
  typescript: {
    title: 'TypeScript',
    classes: 'bg-sky-700 text-white'
  },
  react: {
    title: 'React',
    classes: 'bg-[#61DAFB] text-black'
  },
  svelte: {
    title: 'Svelte',
    classes: 'bg-[#FF3E00] text-white'
  },
  convex: {
    title: 'Convex',
    classes: 'bg-purple-600 text-white'
  },
  mongo: {
    title: 'MongoDB',
    classes: 'bg-green-600 text-white'
  },
  betterauth: {
    title: 'BetterAuth',
    classes: 'bg-indigo-600 text-white'
  },
  clerk: {
    title: 'Clerk',
    classes: 'bg-pink-500 text-white'
  },
  sqlite: {
    title: 'SQLite',
    classes: 'bg-slate-700 text-white'
  },
  drizzle: {
    title: 'Drizzle ORM',
    classes: 'bg-emerald-600 text-white'
  }
};

const {techId} = Astro.props;
const techBadge = tech[techId];

---

<Badge className={techBadge.classes}>
  {techBadge.title}
</Badge>
