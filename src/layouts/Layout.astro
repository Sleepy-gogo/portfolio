---
import '@fontsource-variable/faustina'
import '@fontsource/poppins'
import Header from '@/components/core/Header.astro';
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="fixed inset-0 bg-[url('/noise.svg')] opacity-30 mix-blend-multiply h-full w-full bg-cover bg-repeat -z-50"/>
		<Header />
		<main class="mt-16 container mx-auto">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	::selection {
		background-color: rgba(249, 199, 138, 0.5);
	}

	* {
		font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
	}

	.serif {
		font-family: 'Faustina Variable'
	}
</style>